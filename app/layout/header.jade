doctype html
html(ng-app="justSport")
    head
        meta(name='viewport', content='width=device-width')
        base(href="/")
        title= "JustSport"
        script(src="/node_modules/angular/angular.js")
        link(rel="stylesheet",href="/node_modules/angular-material/angular-material.css")
        link(rel="stylesheet",href="/public/stylesheets/style.css")
        link(href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300', rel='stylesheet', type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    style.
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    body(ng-controller="LoginController as loginVm" ng-init="loginVm.isLoggedIn()" ng-show="!loginVm.stop" ng-cloak)
            md-sidenav.md-sidenav-right.md-whiteframe-z2(md-component-id='right', layout="column")
                md-toolbar.md-theme-light.sidenav-toolbar
                    md-list
                        md-list-item
                            .md-list-item-text(layout='column')
                                h3(style="margin-bottom: 0px;margin-left:15px;").md-headline {{loginVm.name}}
                                h4(style="margin-left:15px;margin-bottom:15px;").md-caption {{loginVm.lname}}
                            img(layout-align="right" ng-src='{{loginVm.img}}', alt='{{loginVm.img}}').md-avatar
                md-menu
                    md-menu-content(width='4')
                        md-menu-item
                            md-button(ng-href="/account/profile" name="profile")
                                md-icon(md-svg-icon='./public/images/icons/profile.svg')
                                |             Perfil
                        md-menu-item
                            md-button(ng-show="loginVm.role == 'owner' || loginVm.role == 'admin'" ng-href="/backoffice" name="backoffice")
                                md-icon(md-svg-icon='./public/images/icons/panel.svg')
                                |             Administrar Establecimientos
                        md-menu-item
                            md-button(ng-href="",ng-click="loginVm.logout()" name="logout")
                                md-icon(md-svg-icon='./public/images/icons/logout.svg')
                                |             Salir
                    md-menu-content



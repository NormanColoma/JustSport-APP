doctype html
html(ng-app="justSportTest")
    head
        meta(name='viewport', content='width=device-width')
        base(href="/")
        title= "JustSport"
        link(rel="stylesheet",href="/node_modules/angular-material/angular-material.css")
        link(rel="stylesheet",href="/public/stylesheets/style.css")
        link(href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300', rel='stylesheet', type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet', type='text/css')
    body(ng-controller="LoginController as loginVm" ng-init="loginVm.isLoggedIn()" ng-show="!loginVm.stop" ng-cloak)
            md-sidenav.md-sidenav-right.md-whiteframe-z2(md-component-id='right')
                md-toolbar.md-theme-light
                    h1.md-toolbar-tools Mi Cuenta
                md-content(layout-padding='', layout="column", layout-align="start none")
                    md-button(ng-href="/account/profile" name="profile").md-primary Perfil
                    md-button(ng-href="",ng-click="loginVm.logout()" name="logout").md-primary Salir
            md-content
                div(layout='row')
                    br
                    md-toolbar
                        div(layout='row', flex='95', hide-sm, hide-xs).md-toolbar-tools.layout-center.md-toolbar-tools-notpading
                            h2
                                a(href='/') JustSport
                            span(flex='')
                            a(href='/account/#/login' ng-show="!loginVm.loggedIn").md-body-1 Login
                            a(ng-show="loginVm.loggedIn" ng-click="loginVm.openMenu()").md-body-1.clickable.account-options Mi cuenta
                        div(layout='row', show-sm, hide-gt-sm, hide-md, hide-gt-md, hide-lg, hide-gt-lg, hide-xl).md-toolbar-tools.layout-center
                            h2
                                span JustSport
                            span(flex='')
                            md-button.md-icon-button(aria-label='More')
                                a( ng-click="loginVm.openMenu()" ng-show="loginVm.loggedIn")
                                    md-icon(md-svg-icon='./public/images/icons/account.svg')
                                a(ng-show="!loginVm.loggedIn" href='/account/').md-body-1.clickable.account-options Mi cuenta


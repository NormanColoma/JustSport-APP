include header
link(rel="stylesheet" type="text/css" href="public/stylesheets/back-office.css")
div(ng-controller="BackOfficeEstabController as backOEstVM" ng-init="backOEstVM.getEstabs(ev)" id="main_back_container")
    md-toolbar(ng-show="estDtVm.establishment == null")
        div(hide-sm, hide-xs).md-toolbar-tools.layout-center
            md-button(aria-label='Home', ng-href="/").md-primary
                | Just Sport
            span(flex='')
            md-button(aria-label='Login',ng-show="!loginVm.loggedIn" ng-href="/account/#/login")
                | Login
            md-button(aria-label='Login',ng-show="loginVm.loggedIn" ng-click="loginVm.openMenu()")
                | Mi cuenta
        div(show-sm, hide-gt-sm, hide-md, hide-gt-md, hide-lg, hide-gt-lg, hide-xl).md-toolbar-tools.layout-center
            md-button(aria-label='Home', ng-href="/").md-primary
                | Just Sport
            span(flex='')
            md-button(aria-label='More',ng-show="loginVm.loggedIn" ng-click="loginVm.openMenu()").md-icon-button
                md-icon(md-svg-icon='./public/images/icons/account.svg')
            md-button(aria-label='More',ng-show="!loginVm.loggedIn" ng-href="/account/")
                | Login
    div(id="preload", ng-show="backOEstVM.preload" hide-gt-sm hide-md hide-gt-md hide-lg hide-gt-lg hide-xl hide-sm show-xs)
        div(layout='row', layout-align="center center").block
            p.md-title Cargando establecimientos...
        md-button(aria-label="preload btn").md-fab.btn_pre
            div(layout='row', layout-sm='column', layout-align='space-around')
                md-progress-circular(md-mode='indeterminate')
    div(ng-show="!backOEstVM.preload", md-content, layout="row", layout-align-gt-sm="center center", layout-align-sm="center center" layout-margin)
        div(flex="95", flex-sm="95", flex-xs="100" layout="column")
            h2(hide-sm, hide-xs).md-display-2.font-header Panel de Control
            backoffice-tabs(ng-cloak)
include footer

